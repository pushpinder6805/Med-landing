      color: #1e293b;
      line-height: 1.6;
      overflow-x: hidden;
    }

    nav {
      position: fixed;
      top: 0;
      width: 100vw;
      left: 0;
      right: 0;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(12px);
      z-index: 50;
      border-bottom: 1px solid #e2e8f0;
    }

    nav .container {
      max-width: 80rem;
      margin: 0 auto;
      padding: 1rem 1.5rem;
    }

    nav h1 {
      font-size: 1.5rem;
      font-weight: 300;
      letter-spacing: 0.05em;
      color: #1e293b;
    }

    main {
      padding-top: 5rem;
      width: 100%;
    }

    .hero {
      position: relative;
      height: 85vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      width: 100vw;
      left: 0;
      right: 0;
    }

    .hero::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(to bottom, rgba(15, 23, 42, 0.6), rgba(15, 23, 42, 0.4));
      z-index: 10;
    }

    .hero img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .hero-content {
      position: relative;
      z-index: 20;
      text-align: center;
      padding: 1.5rem;
      max-width: 56rem;
    }

    .hero h2 {
      font-size: clamp(2.5rem, 8vw, 4rem);
      font-weight: 300;
      color: white;
      margin-bottom: 1.5rem;
      letter-spacing: -0.01em;
      line-height: 1.2;
    }

    .hero p {
      font-size: clamp(1.25rem, 3vw, 1.5rem);
      color: #cbd5e1;
      font-weight: 300;
      margin-bottom: 2rem;
      line-height: 1.5;
    }

    .button-group {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    @media (min-width: 640px) {
      .button-group {
        flex-direction: row;
      }
    }

    .btn {
      padding: 0.75rem 2rem;
      border-radius: 0.5rem;
      font-size: 1rem;
      font-weight: 400;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s ease;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      border: none;
      cursor: pointer;
    }

    .btn-primary {
      background-color: white;
      color: #1e293b;
    }

    .btn-primary:hover {
      background-color: #f1f5f9;
    }

    .btn-secondary {
      background-color: #059669;
      color: white;
    }

    .btn-secondary:hover {
      background-color: #047857;
    }

    .section {
      max-width: 80rem;
      margin: 0 auto;
      padding: 6rem 1.5rem;
    }

    .two-column {
      display: grid;
      grid-template-columns: 1fr;
      gap: 4rem;
      align-items: center;
    }

    @media (min-width: 768px) {
      .two-column {
        grid-template-columns: 1fr 1fr;
      }
    }

    .features {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .section h3 {
      font-size: 2.25rem;
      font-weight: 300;
      color: #1e293b;
      margin-bottom: 2rem;
      line-height: 1.3;
    }

    .feature-item {
      display: flex;
      gap: 1rem;
    }

    .feature-icon {
      flex-shrink: 0;
      width: 2.5rem;
      height: 2.5rem;
      border-radius: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      margin-top: 0.25rem;
      transition: all 0.3s ease;
    }

    .feature-item:nth-child(1) .feature-icon {
      background-color: #d1fae5;
      color: #059669;
    }

    .feature-item:nth-child(2) .feature-icon {
      background-color: #dbeafe;
      color: #2563eb;
    }

    .feature-item:nth-child(3) .feature-icon {
      background-color: #fef3c7;
      color: #d97706;
    }

    .feature-item:nth-child(4) .feature-icon {
      background-color: #fce7f3;
      color: #e11d48;
    }

    .feature-item:hover .feature-icon {
      background-color: rgba(0, 0, 0, 0.05);
    }

    .feature-content h4 {
      font-size: 1.25rem;
      font-weight: 400;
      color: #1e293b;
      margin-bottom: 0.25rem;
    }

    .feature-content p {
      color: #64748b;
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .feature-image {
      position: relative;
      height: 600px;
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .feature-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .guidelines-section {
      background-color: #f8fafc;
      padding: 6rem 1.5rem;
      width: 100vw;
      left: 0;
      right: 0;
      position: relative;
    }

    .guidelines-container {
      max-width: 80rem;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    @media (min-width: 768px) {
      .guidelines-container {
        grid-template-columns: 1fr 1fr;
      }
    }

    .guideline-card {
      border-radius: 1rem;
      padding: 2.5rem;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
      border: 1px solid #e2e8f0;
    }

    .guideline-card.negative {
      background-color: white;
    }

    .guideline-card.positive {
      background: linear-gradient(to bottom right, #059669, #0d9488);
      color: white;
      border: none;
    }

    .guideline-card h3 {
      font-size: 2rem;
      font-weight: 300;
      margin-bottom: 2rem;
    }

    .guideline-card.negative h3 {
      color: #1e293b;
    }

    .guideline-list {
      list-style: none;
    }

    .guideline-list li {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    .guideline-card.negative li {
      color: #64748b;
    }

    .guideline-card.positive li {
      color: white;
    }

    .guideline-list li span:first-child {
      font-weight: 600;
      flex-shrink: 0;
    }

    .guideline-card.negative li span:first-child {
      color: #f87171;
    }

    .guideline-card.positive li span:first-child {
      color: #a7f3d0;
    }

    .guideline-subheading {
      font-size: 1.125rem;
      font-weight: 400;
      margin: 2rem 0 1rem 0;
      border-top: 1px solid currentColor;
      padding-top: 2rem;
    }

    .guideline-card.negative .guideline-subheading {
      color: #1e293b;
      border-top-color: #e2e8f0;
    }

    .guideline-card.positive .guideline-subheading {
      color: white;
      border-top-color: rgba(167, 243, 208, 0.3);
    }

    .values-section {
      position: relative;
      padding: 8rem 1.5rem;
      overflow: hidden;
      width: 100vw;
      left: 0;
      right: 0;
    }

    .values-section::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(to bottom right, #1e293b, #0f172a);
      z-index: 1;
    }

    .values-section img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.2;
    }

    .values-content {
      position: relative;
      z-index: 10;
      max-width: 56rem;
      margin: 0 auto;
      text-align: center;
    }

    .values-content h3 {
      font-size: clamp(2rem, 5vw, 3rem);
      font-weight: 300;
      color: white;
      margin-bottom: 3rem;
      line-height: 1.3;
    }

    .values-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin: 0 auto;
      max-width: 100%;
    }

    .value-box {
      background-color: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(4px);
      border-radius: 0.75rem;
      padding: 2rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .value-box p {
      font-size: 1.5rem;
      font-weight: 300;
      color: white;
    }

    .closing-section {
      padding: 6rem 1.5rem;
      background-color: white;
      text-align: center;
      width: 100vw;
      left: 0;
      right: 0;
      position: relative;
    }

    .closing-section h3 {
      font-size: 1.5rem;
      font-weight: 300;
      color: #475569;
      margin-bottom: 2rem;
      line-height: 1.5;
    }

    .accent-line {
      width: 6rem;
      height: 0.25rem;
      background: linear-gradient(to right, #4ade80, #14b8a6);
      margin: 0 auto;
      border-radius: 9999px;
    }

    footer {
      background-color: #0f172a;
      color: #94a3b8;
      padding: 3rem 1.5rem;
      text-align: center;
      width: 100vw;
      left: 0;
      right: 0;
      position: relative;
    }

    footer p {
      font-size: 0.875rem;
      font-weight: 300;
    }

    @media (max-width: 640px) {
      .feature-image {
        height: 300px;
      }

      .values-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
